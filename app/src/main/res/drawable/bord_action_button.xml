<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
                <shape>
                    <corners android:radius="5dp" />
                    <solid android:color="#33000000" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape>
                    <stroke android:width="1dp" android:color="#22000000" />
                    <corners android:radius="5dp" />
                    <gradient android:angle="270" android:endColor="#33000000" android:startColor="#11000000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>